<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> <%= @questions.model_name.human %> </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2> <%= t('messages.listing', model: @questions.model_name.human(count: 2) ) %> </h2>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th> <%= translate_attribute(@questions, :id) %> </th>
                        <th> <%= translate_attribute(@questions, :description) %> </th>
                        <th>  <%= translate_attribute(@questions, :subject_id) %> </th>
                        <th>
                            <%= link_to new_admins_backoffice_question_path, type:"button", class:"btn btn-success btn-block" do %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% @questions.each do |question| %>
                    <tr>
                        <td><%= question.id %></td>
                        <td><%= question.description.truncate(70) %></td>
                        <td><%= question.subject.description.truncate(30) %></td>
                        <td style="width: 100px">
                            <%= link_to edit_admins_backoffice_question_path(question), type:"button", class:"btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>

                            <%= link_to admins_backoffice_question_path(question), type:"button", class:"btn btn-danger btn-circle", method:"delete", data: { confirm: t('messages.confirmation') } do %>
                                <i class="fa fa-minus"></i></button>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-center">
 <%= paginate @questions %>
</div>