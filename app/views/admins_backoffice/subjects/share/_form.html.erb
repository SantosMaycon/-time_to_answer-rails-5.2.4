<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= @subject.model_name.human %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= action_messeges %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [:admins_backoffice, @subject], local: true) do |form| %>
                            <% if @subject.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                    <% @subject.errors.full_messages.each do |error|%>
                                        <ul>
                                            <li> <%= error %> </li>
                                        </ul>
                                    <% end %>
                                </div>
                            <% end %>
                            <div class="form-group">
                                <%= form.label :description %>
                                <%= form.text_field :description, class:"form-control", placeholder:"Technology" %>
                            </div>
                            <button type="submit" class="btn btn-default"> <%= t('links.submit') %> </button>
                            <button type="reset" class="btn btn-default"> <%= t('links.reset') %> </button>
                        <% end %>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>