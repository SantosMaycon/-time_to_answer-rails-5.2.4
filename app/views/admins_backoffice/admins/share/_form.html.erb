<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_messeges %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= "#{action_messeges}Administrator" %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [:admins_backoffice, @admin], local: true) do |form| %>
                            <% if @admin.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                    <% @admin.errors.full_messages.each do |error|%>
                                        <ul>
                                            <li> <%= error %> </li>
                                        </ul>
                                    <% end %>
                                </div>
                            <% end %>
                            <div class="form-group">
                                <%= form.label :email %>
                                <%= form.text_field :email, class:"form-control", placeholder:"example@example.com" %>
                            </div>
                            <div class="form-group">
                                <%= form.label :password %>
                                <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
                            </div>
                            <div class="form-group">
                                <%= form.label :password_confirmation %>
                                <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Password Confirmation" %>
                            </div>
                            <button type="submit" class="btn btn-default">Submit Button</button>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        <% end %>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>