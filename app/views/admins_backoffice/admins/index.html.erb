<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Index</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>List of Admin</h2>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>
                            <%= link_to new_admins_backoffice_admin_path, type:"button", class:"btn btn-success btn-block" do %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.email %></td>
                        <td style="width: 100px">
                            <%= link_to edit_admins_backoffice_admin_path(admin), type:"button", class:"btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>

                            <%= link_to admins_backoffice_admin_path(admin), type:"button", class:"btn btn-danger btn-circle", method:"delete", data: { confirm: "Are you sure?" } do %>
                                <i class="fa fa-minus"></i></button>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>