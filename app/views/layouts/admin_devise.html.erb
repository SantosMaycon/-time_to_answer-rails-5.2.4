<!DOCTYPE html>
<html>
  <head>
    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'admin_devise' %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
    <body>
        <div class="container">
            <%= yield %>
        </div>

        <%= javascript_include_tag 'application' %>
        <%= javascript_include_tag 'admin_devise' %>
      
        <script>
          <% if flash %>
            <% flash.each do |key, value| %>
              $.bootstrapGrowl('<%= value %>', {
              ele: 'body', // which element to append to
              type: 'danger', // (null, 'info', 'danger', 'success')
              align: 'right', // ('left', 'right', or 'center')
              delay: 3500, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
              stackup_spacing: 10 // spacing between consecutively stacked growls.
              });
            <% end %>
          <% end %>
       </script>
    </body>
</html>