 <div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
          <h1>Change password</h1>
          <div>
            <%= f.password_field :password, autofocus: true, placeholder:"Password", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autofocus: true, placeholder:"Password Confirmation", class:"form-control" %>
          </div>
          <div>
            <%= f.submit "Change my password", class:"btn btn-default submit", style:"float: none; margin-left: 0px; width: 100%;" %>
          </div>

          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>